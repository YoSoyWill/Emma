   <script>

      function calcular() {
         // Obtenemos los valores de los campos de texto
         const names = document.querySelector("input[name='names']").value;
         const family = document.querySelector("select[name='family']").value;

         // Realizamos la operación
         const Magia = "https://yosoywill.github.io/Emma/babycount.html?nombre=" + names + "&fam=" + family;

         // Mostramos el resultado
         window.open(Magia)
      }
   </script>
